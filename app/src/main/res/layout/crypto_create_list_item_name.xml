<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/material_list_text_first_position_margin_start"
    android:paddingTop="@dimen/material_baseline_grid_1x"
    android:paddingEnd="@dimen/material_baseline_grid_1x"
    android:paddingBottom="@dimen/material_baseline_grid_1x"
    android:orientation="horizontal"
    android:background="@color/primary">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Application.Label"
            android:text="@string/container_title" />

        <TextView
            android:id="@id/cryptoCreateName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:singleLine="true"
            android:ellipsize="middle" />
    </LinearLayout>

    <ImageButton
        android:id="@id/cryptoCreateNameUpdateButton"
        style="@style/Widget.Application.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_list_text_first_position_margin_start"
        android:src="@drawable/ic_icon_edit"
        android:contentDescription="@string/crypto_create_name_update_button" />

    <ImageButton
        android:id="@id/cryptoCreateSaveButton"
        style="@style/Widget.Application.Button.Borderless.Colored"
        android:layout_width="@dimen/material_baseline_grid_4x"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/material_menu_simple_padding_vertical"
        android:src="@drawable/ic_icon_save"
        android:contentDescription="@string/crypto_create_save_button"
        app:tint="@color/accent" />

</LinearLayout>
