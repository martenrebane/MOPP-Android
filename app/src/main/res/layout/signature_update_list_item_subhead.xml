<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:accessibilityHeading="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="@dimen/material_baseline_grid_7x"
        android:paddingTop="@dimen/material_list_normal_padding_vertical"
        android:paddingBottom="@dimen/material_list_normal_padding_vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@id/signatureUpdateListSubheadTitle"
            style="@style/Widget.Application.Subheader.Container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="40dp"
            android:gravity="center"
            android:text="@string/signature_update_documents_title" />

        <ImageButton
            android:id="@id/signatureUpdateListSubheadButton"
            style="@style/Widget.Application.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/material_list_icon_last_position_margin_horizontal"
            android:src="@drawable/ic_add_circle"
            android:contentDescription="@string/documents_add_button_accessibility"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

</LinearLayout>
