<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageButton
        android:id="@id/mainHomeMenuCloseButton"
        style="?attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="?attr/dialogPreferredPadding"
        android:src="@drawable/ic_clear"
        android:tint="@color/material_color_white"
        android:minWidth="@dimen/material_button_touch_target_height_minimum" />

    <Button
        android:id="@id/mainHomeMenuHelp"
        style="@style/Widget.Application.MenuItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_home_menu_help"
        android:contentDescription="@string/main_home_menu_help_accessibility"
        android:drawableStart="@drawable/ic_help_outline" />

    <Button
        android:id="@id/mainHomeMenuAccessibility"
        style="@style/Widget.Application.MenuItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_home_menu_accessibility"
        android:contentDescription="@string/main_accessibility_title"
        android:drawableStart="@drawable/ic_icon_accessibility" />

    <Button
        android:id="@id/mainHomeMenuRecent"
        style="@style/Widget.Application.MenuItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_home_menu_recent"
        android:contentDescription="@string/main_home_menu_recent_accessibility"
        android:drawableStart="@drawable/ic_folder_open" />

    <Button
        android:id="@id/mainHomeMenuSettings"
        style="@style/Widget.Application.MenuItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_home_menu_settings"
        android:contentDescription="@string/main_home_menu_settings_accessibility"
        android:drawableStart="@drawable/ic_settings" />

    <Button
        android:id="@id/mainHomeMenuAbout"
        style="@style/Widget.Application.MenuItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_home_menu_about"
        android:contentDescription="@string/main_home_menu_about_accessibility"
        android:drawableStart="@drawable/ic_info_outline" />

    <Button
        android:id="@id/mainHomeMenuDiagnostics"
        style="@style/Widget.Application.MenuItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_home_menu_diagnostics"
        android:contentDescription="@string/main_home_menu_diagnostics_accessibility"
        android:drawableStart="@drawable/ic_icon_diagnostics" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/material_baseline_grid_3x"
        android:layout_marginBottom="@dimen/material_baseline_grid_3x"
        android:background="@color/menuSeparator" />

    <RadioGroup
        android:id="@id/mainHomeMenuLocale"
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_baseline_grid_9x"
        android:layout_marginStart="?attr/dialogPreferredPadding"
        android:layout_marginEnd="?attr/dialogPreferredPadding"
        android:orientation="horizontal"
        android:background="@drawable/main_home_menu_locales_background">

        <RadioButton
            android:id="@id/mainHomeMenuLocaleEt"
            style="@style/Widget.Application.MenuLocale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/material_baseline_grid_2.5x"
            android:padding="14dp"
            android:maxLines="2"
            android:text="@string/main_home_menu_locale_et" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/menuSeparator" />

        <RadioButton
            android:id="@id/mainHomeMenuLocaleRu"
            style="@style/Widget.Application.MenuLocale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/material_baseline_grid_2.5x"
            android:padding="14dp"
            android:maxLines="2"
            android:text="@string/main_home_menu_locale_ru" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/menuSeparator" />

        <RadioButton
            android:id="@id/mainHomeMenuLocaleEn"
            style="@style/Widget.Application.MenuLocale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/material_baseline_grid_2.5x"
            android:padding="14dp"
            android:maxLines="1"
            android:text="@string/main_home_menu_locale_en" />
    </RadioGroup>

</LinearLayout>
