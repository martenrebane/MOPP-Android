<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.LinearLayout"
    tools:layout_width="match_parent"
    tools:layout_height="match_parent"
    tools:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:id="@id/eidHomeCertificateDataTitle"
            style="@style/Widget.Application.EID.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/eid_home_certificate_data_title_auth" />

        <TextView
            android:id="@id/eidHomeCertificateDataValidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/eid_home_certificate_data_valid" />
    </LinearLayout>

    <Button
        android:id="@id/eidHomeCertificateDataButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_baseline_grid_1x"
        android:text="@string/eid_home_certificate_data_button_change_auth"
        android:contentDescription="@string/eid_home_certificate_data_button_change_auth_accessibility" />

    <TextView
        android:id="@id/eidHomeCertificateDataLink"
        style="@style/Widget.Application.EID.Link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/eid_home_certificate_data_link_auth"
        android:contentDescription="@string/eid_home_certificate_data_link_auth_accessibility" />

    <TextView
        android:id="@id/eidHomeCertificateDataError"
        style="@style/Widget.Application.EID.Error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:text="@string/eid_home_certificate_data_error_auth"
        android:contentDescription="@string/eid_home_certificate_data_error_auth_accessibility" />

</merge>
