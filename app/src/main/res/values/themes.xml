<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.Application" parent="Theme.Design.Light.NoActionBar">
    </style>

    <style name="Theme.Application" parent="Base.Theme.Application">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorError">@color/error</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="toolbarStyle">@style/Widget.Application.Toolbar</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="colorButtonNormal">@color/accent</item>
        <item name="buttonStyle">@style/Widget.Application.Button</item>
        <item name="buttonBarButtonStyle">@style/Widget.Application.Button.ButtonBar</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
        <item name="textAppearanceListItem">@style/TextAppearance.Application.ListItem</item>
        <item name="textAppearanceListItemSecondary">@style/TextAppearance.Application.ListItemSecondary</item>
        <item name="bottomSheetDialogTheme">@style/Theme.Application.BottomSheetDialog</item>
        <item name="android:editTextBackground">@drawable/bottom_border_background</item>
    </style>

    <style name="Theme.Application.Launch" parent="Theme.Application">
        <item name="android:windowBackground">@drawable/main_launch_bg</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <style name="Theme.Application.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="textAppearanceListItem">@style/TextAppearance.Application.ListItem</item>
        <item name="textAppearanceListItemSecondary">@style/TextAppearance.Application.ListItemSecondary</item>
    </style>

    <style name="ThemeOverlay.Application.Dark" parent="ThemeOverlay.AppCompat.Dark">
    </style>

    <style name="ThemeOverlay.Application.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Base.ThemeOverlay.Application.Menu" parent="ThemeOverlay.AppCompat.Dialog.Alert">
    </style>

    <style name="ThemeOverlay.Application.Menu" parent="Base.ThemeOverlay.Application.Menu">
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:windowBackground">@color/menuBackground</item>
        <item name="android:statusBarColor">@color/menuBackground</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="UniformDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/UniformDialogTitle</item>
    </style>

    <style name="UniformDialogTitle" parent="Base.DialogWindowTitle.AppCompat">
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">11dp</item>
        <item name="android:autoSizeMaxTextSize">24dp</item>
        <item name="android:autoSizeStepGranularity">1dp</item>
    </style>

</resources>
